<Window x:Class="MPHPresenter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MPHPresenter.ViewModels"
        mc:Ignorable="d"
        Title="MPH Presenter - Operator Panel" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        Foreground="#ffffff">
    
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="VideoPsalm Clone" FontSize="20" FontWeight="Bold" Margin="0,0,20,0" Foreground="#ffffff"/>
                
                <Separator Width="1" Background="#444444" Margin="20,0" VerticalAlignment="Center"/>

                <Button Content="Start Projection" Command="{Binding StartProjectionCommand}" 
                        Background="#3a7bd5" Foreground="White" BorderBrush="#3a7bd5" 
                        Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Stop Projection" Command="{Binding StopProjectionCommand}" 
                        Background="#ff4b55" Foreground="White" BorderBrush="#ff4b55" 
                        Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Toggle Theme" Command="{Binding ToggleThemeCommand}" 
                        Background="#7e57c2" Foreground="White" BorderBrush="#7e57c2" 
                        Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Exit" Command="{Binding ExitCommand}" 
                        Background="#9e9e9e" Foreground="White" BorderBrush="#9e9e9e" 
                        Padding="10,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Background="#1a1a1a" BorderBrush="#333333" Margin="10">
            
            <!-- Songs Tab -->
            <TabItem Header="Songs" Background="#2d2d2d" Foreground="#ffffff">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: List and Search -->
                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding SongViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                      
                                     Width="200" Margin="0,0,10,0" 
                                     Background="#333333" Foreground="White" 
                                     BorderBrush="#555555" Padding="5"/>
                            <Button Content="Search" Command="{Binding SongViewModel.SearchCommand}" 
                                    Background="#3a7bd5" Foreground="White" 
                                    Padding="8,4" Margin="0,0,10,0"/>
                            <Button Content="Clear" Command="{Binding SongViewModel.ClearSearchCommand}" 
                                    Background="#9e9e9e" Foreground="White" 
                                    Padding="8,4" Margin="0,0,10,0"/>
                            
                            <ComboBox ItemsSource="{Binding SongViewModel.Categories}" 
                                      SelectedItem="{Binding SongViewModel.CategoryFilter}" 
                                      Width="100" Margin="0,0,10,0"
                                      Background="#333333" Foreground="White" 
                                      BorderBrush="#555555" Padding="5"/>
                        </StackPanel>
                        
                        <!-- Song List -->
                        <ListView ItemsSource="{Binding SongViewModel.FilteredSongs}" 
                                  SelectedItem="{Binding SongViewModel.SelectedSong}"
                                  Background="#2d2d2d" Foreground="White" 
                                  BorderBrush="#555555" Margin="0,10,0,0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333333" Padding="8" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#ffffff"/>
                                            <TextBlock Text="{Binding Category}" Foreground="#aaaaaa" FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <!-- Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Add" Command="{Binding SongViewModel.AddSongCommand}" 
                                    Background="#3a7bd5" Foreground="White" 
                                    Padding="10,5" Margin="0,0,10,0"/>
                            <Button Content="Edit" Command="{Binding SongViewModel.EditSongCommand}" 
                                    Background="#7e57c2" Foreground="White" 
                                    Padding="10,5" Margin="0,0,10,0"/>
                            <Button Content="Delete" Command="{Binding SongViewModel.DeleteSongCommand}" 
                                    Background="#ff4b55" Foreground="White" 
                                    Padding="10,5" Margin="0,0,10,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Right Panel: Preview and Send -->
                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Preview" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#ffffff"/>
                        
                        <Border Grid.Row="1" Background="#2d2d2d" BorderBrush="#555555" BorderThickness="1" Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <TextBlock Text="{Binding SongViewModel.SelectedSong.Lyrics, TargetNullValue='Select a song to preview'}" 
                                           TextWrapping="Wrap" 
                                           Foreground="#ffffff" 
                                           FontSize="14"
                                           LineHeight="1.5"/>
                            </ScrollViewer>
                        </Border>
                        
                        <Button Content="Send to Projection" 
                                Command="{Binding SongViewModel.SendToProjectionCommand}" 
                                Grid.Row="1" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom" 
                                Margin="0,0,10,10" 
                                Background="#3a7bd5" 
                                Foreground="White" 
                                Padding="15,8" 
                               />
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Bible Tab -->
            <TabItem Header="Bible" Background="#2d2d2d" Foreground="#ffffff">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Search and Navigation -->
                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding BibleViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                      
                                     Width="200" Margin="0,0,10,0" 
                                     Background="#333333" Foreground="White" 
                                     BorderBrush="#555555" Padding="5"/>
                            <Button Content="Search" Command="{Binding BibleViewModel.SearchCommand}" 
                                    Background="#3a7bd5" Foreground="White" 
                                    Padding="8,4" Margin="0,0,10,0"/>
                            <Button Content="Clear" Command="{Binding BibleViewModel.ClearSearchCommand}" 
                                    Background="#9e9e9e" Foreground="White" 
                                    Padding="8,4" Margin="0,0,10,0"/>
                            
                            <ComboBox ItemsSource="{Binding BibleViewModel.Translations}" 
                                      SelectedItem="{Binding BibleViewModel.SelectedTranslation}" 
                                      Width="80" Margin="0,0,10,0"
                                      Background="#333333" Foreground="White" 
                                      BorderBrush="#555555" Padding="5"/>
                        </StackPanel>
                        
                        <!-- Book Selection -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox ItemsSource="{Binding BibleViewModel.Books}" 
                                      SelectedItem="{Binding BibleViewModel.SelectedBook}" 
                                      Width="150" Margin="0,0,10,0"
                                      Background="#333333" Foreground="White" 
                                      BorderBrush="#555555" Padding="5"/>
                            
                            <TextBlock Text="Chapter:" Margin="0,0,10,0" Foreground="#ffffff" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding BibleViewModel.SelectedChapter}" 
                                     Width="50" Margin="0,0,10,0"
                                     Background="#333333" Foreground="White" 
                                     BorderBrush="#555555" Padding="5" 
                                     TextAlignment="Center"/>
                            
                            <Button Content="Load" Command="{Binding BibleViewModel.LoadBookCommand}" 
                                    Background="#7e57c2" Foreground="White" 
                                    Padding="8,4"/>
                        </StackPanel>
                        
                        <!-- Verse List -->
                        <ListView ItemsSource="{Binding BibleViewModel.Verses}" 
                                  SelectedItem="{Binding BibleViewModel.SelectedVerse}"
                                  Background="#2d2d2d" Foreground="White" 
                                  BorderBrush="#555555" Margin="0,10,0,0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333333" Padding="8" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Reference}" FontWeight="Bold" Foreground="#ffffff"/>
                                            <TextBlock Text="{Binding Text}" Foreground="#aaaaaa" FontSize="12" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    
                    <!-- Right Panel: Preview and Send -->
                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Preview" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#ffffff"/>
                        
                        <Border Grid.Row="1" Background="#2d2d2d" BorderBrush="#555555" BorderThickness="1" Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <TextBlock Text="{Binding BibleViewModel.SelectedVerse.Text, TargetNullValue='Select a verse to preview'}" 
                                           TextWrapping="Wrap" 
                                           Foreground="#ffffff" 
                                           FontSize="14"
                                           LineHeight="1.5"/>
                            </ScrollViewer>
                        </Border>
                        
                        <Button Content="Send to Projection" 
                                Command="{Binding BibleViewModel.SendToProjectionCommand}" 
                                Grid.Row="1" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom" 
                                Margin="0,0,10,10" 
                                Background="#3a7bd5" 
                                Foreground="White" 
                                Padding="15,8" 
                               />
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Media Tab -->
            <TabItem Header="Media" Background="#2d2d2d" Foreground="#ffffff">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Media List -->
                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Refresh Button -->
                        <Button Content="Refresh Media" 
                                Command="{Binding MediaViewModel.RefreshMediaCommand}" 
                                Grid.Row="0"
                                Background="#3a7bd5" 
                                Foreground="White" 
                                Padding="10,5" 
                                Margin="0,0,0,10" 
                               
                                HorizontalAlignment="Left"/>
                        
                        <!-- Media List -->
                        <ListView ItemsSource="{Binding MediaViewModel.MediaItems}" 
                                  SelectedItem="{Binding MediaViewModel.SelectedMediaItem}"
                                  Background="#2d2d2d" Foreground="White" 
                                  BorderBrush="#555555" Margin="0,10,0,0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333333" Padding="8" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" FontWeight="Bold" Foreground="#ffffff"/>
                                            <TextBlock Text="{Binding Type}" Foreground="#aaaaaa" FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    
                    <!-- Right Panel: Preview and Send -->
                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Preview" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#ffffff"/>
                        
                        <Border Grid.Row="1" Background="#2d2d2d" BorderBrush="#555555" BorderThickness="1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image Source="{Binding MediaViewModel.SelectedMediaItem.ThumbnailPath, TargetNullValue='pack://application:,,,/Images/default_media.png'}" 
                                       Stretch="Uniform" 
                                       MaxWidth="300" 
                                       MaxHeight="200"
                                       Margin="0,0,10,0"
                                       Visibility="{Binding MediaViewModel.SelectedMediaItem.IsImage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <TextBlock Text="{Binding MediaViewModel.SelectedMediaItem.Type, TargetNullValue='No media selected'}" 
                                           TextWrapping="Wrap" 
                                           Foreground="#ffffff" 
                                           FontSize="14"
                                           Margin="0,0,0,0"
                                           Visibility="{Binding MediaViewModel.SelectedMediaItem.IsImage, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="Type:" Foreground="#aaaaaa" FontSize="12"/>
                                    <TextBlock Text="{Binding MediaViewModel.SelectedMediaItem.Type}" Foreground="#ffffff" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <Button Content="Send to Projection" 
                                Command="{Binding MediaViewModel.SendToProjectionCommand}" 
                                Grid.Row="1" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom" 
                                Margin="0,0,10,10" 
                                Background="#3a7bd5" 
                                Foreground="White" 
                                Padding="15,8" 
                               />
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>